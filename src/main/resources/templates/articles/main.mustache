<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SNS 간단 구현 메인</title>
    <!-- Kakao 지도 SDK -->
    <script type="text/javascript"
            src="//dapi.kakao.com/v2/maps/sdk.js?appkey=7ae6f570f45c759f820a16cbc11adcb2"></script>
</head>
<body>
{{>layouts/header}}

<div class="container mt-4">
    <!-- 로그인 메뉴 -->
    <div class="loginMenu text-center mb-4">
        {{#logedIn}}
            <button onclick="location.href='/logout'" class="btn btn-primary me-2">로그아웃</button>
            <p class="welcome-message mt-2">환영합니다, <strong>{{username}}</strong>!</p>
            <button onclick="location.href='/articles/new'" class="btn btn-primary mt-2">새 글쓰기</button>
        {{/logedIn}}
        {{^logedIn}}
            <button onclick="location.href='/login'" class="btn btn-primary me-2">로그인</button>
            <button onclick="location.href='/signup'" class="btn btn-primary">회원가입</button>
        {{/logedIn}}
    </div>

    <!-- 게시글 리스트 -->
    <div class="article-list">
        <h1 class="text-center mb-4">SNS 간단 구현 페이지</h1>
        <hr>
        {{#articlesWithAuthor}}
            <div class="article-item card mb-4 p-3">
                <div class="card-body">
                    <h5 class="card-title">작성글 번호: {{article.id}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">작성자: {{article.user.username}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">작성자 아이디: {{article.user.id}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">작성 날짜: {{article.datePosted}}</h6>
                    {{#article.mediaList}}
                        <div class="text-center mb-3">
                            <img src="{{fileUrl}}" alt="사진" class="img-fluid" style="max-width: 400px;">
                        </div>
                    {{/article.mediaList}}
                    <p class="card-text"><strong>내용:</strong> {{article.content}}</p>

                    <!-- 수정/삭제 버튼 -->
                    {{#isAuthor}}
                        <div class="text-end mt-3">
                            <button onclick="location.href='/articles/edit/{{article.id}}'" class="btn btn-primary me-2">수정</button>
                            <button onclick="location.href='/articles/delete/{{article.id}}'" class="btn btn-danger">삭제</button>
                        </div>
                    {{/isAuthor}}
                </div>

                <!-- 장소 정보 및 지도 -->
                    {{#article.location}}
                        <div class="mt-3">
                            <p><strong>장소</strong></p>
                            <div class="map-container mb-3" id="map-{{article.id}}" style="width: 100%; height: 300px;"></div>
                            <script>
                                (function() {
                                    var locationData = "{{article.location}}".split('|');
                            var address = locationData[0]; // 주소
                            var longitude = parseFloat(locationData[1]); // 경도
                            var latitude = parseFloat(locationData[2]); // 위도

                            var container = document.getElementById("map-{{article.id}}"); // 각 지도의 ID
                            var options = {
                                center: new kakao.maps.LatLng(latitude, longitude),
                                level: 3
                            };
                            var map = new kakao.maps.Map(container, options);

                            // 마커 생성
                            var markerPosition = new kakao.maps.LatLng(latitude, longitude);
                            var marker = new kakao.maps.Marker({
                                position: markerPosition
                            });
                            marker.setMap(map);

                            // 주소 정보 표시
                            var infowindow = new kakao.maps.InfoWindow({
                                content: `<div style="padding:5px;">${address}</div>`
                            });
                            infowindow.open(map, marker);
                        })();
                            </script>
                        </div>
                    {{/article.location}}
            </div>
        {{/articlesWithAuthor}}

    </div>
</div>
{{>layouts/footer}}
</body>
</html>
